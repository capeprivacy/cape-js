  "dependencies": {
    "@capeprivacy/isomorphic": "^0.5.0",
    "hpke-js": "^0.13.0",
    "isomorphic-ws": "^5.0.0",
    "loglevel": "^1.8.0",
    "ws": "^8.8.0"
  },
  "devDependencies": {
    "@capeprivacy/types": "^0.5.0",
    "@types/ws": "^8.5.3",
